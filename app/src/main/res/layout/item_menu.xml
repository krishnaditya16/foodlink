<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/menu_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/md_theme_light_onSurfaceVariant" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/menu_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Vegetarian - Egg"
                android:textSize="14dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/menu_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egg Toast Sandwich"
                android:textSize="18dp"
                android:layout_below="@id/menu_type_text_view"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/menu_title_text_view">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_24"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/menu_rating_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="5 Star"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/menu_restaurant_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/menu_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_type_text_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:text="$10"
                android:textSize="22dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>